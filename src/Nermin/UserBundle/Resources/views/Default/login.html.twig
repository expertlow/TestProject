{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/nerminuser/css/signin.css') }}">
{% endblock %}

{% block content %}
    <form class="form-signin" action="{{ path("login_check") }}" method="post">
        <h2 class="form-signin-heading">Please sign in</h2>
        {% if error %}
            <p class="alert alert-error">
                {{ error }}
            </p>
        {% endif %}
        <input type="text" class="form-control" placeholder="Email address" required autofocus name="_username" value="{{ last_username }}">
        <input type="password" class="form-control" placeholder="Password" required name="_password">
        <input name="_token" type="hidden" value="{{ csrf_token }}"/>

        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me" name="_remember_me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
{% endblock %}